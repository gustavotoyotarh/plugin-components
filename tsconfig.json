{
  "compilerOptions": {
    "target": "ES6", // Set the output to ES6
    "module": "CommonJS", // Or "ES6" depending on your module system
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for input files
    "noImplicitAny": false, // Avoid errors when 'any' is used
    "resolveJsonModule": true, // Enable importing .json files
    "jsx": "react",
    "removeComments": true, // Remove comments from the output
    "esModuleInterop": true // Disable interop to avoid __importDefault
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules folder
  ]
}
